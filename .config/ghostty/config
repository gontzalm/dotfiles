# behaviour
quit-after-last-window-closed
fullscreen
command = /usr/local/bin/nu --config ~/.config/nu/config.nu
macos-non-native-fullscreen = true

# style
font-family = VictorMono Nerd Font Mono
font-family-bold = VictorMono NFM Bold
font-family-italic = VictorMono NFM Oblique
font-family-bold-italic = VictorMono NFM Bold Oblique

theme = ChallengerDeep
background-opacity = 0.8
background-blur = true

# keybindings
keybind = super+shift+f=toggle_fullscreen
keybind = super+enter=new_split:auto
keybind = super+h=goto_split:left
keybind = super+j=goto_split:down
keybind = super+k=goto_split:up
keybind = super+l=goto_split:right
